<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= vlog.title %> - TechTalks</title>
  <link rel="stylesheet" href="/css/main.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #fff8f0;
      padding: 0;
      margin: 0;
    }

    header {
      background-color: #ffb6b9;
      color: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      font-family: 'Caveat', cursive;
      font-size: 36px;
      margin: 0;
    }

    nav a {
      margin: 0 10px;
      color: white;
      text-decoration: none;
      font-weight: bold;
    }

    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 0 15px;
    }

    .vlog-title {
      font-size: 28px;
    }

    .author {
      font-size: 13px;
      color: #666;
    }

    .comment-box, .comment-list {
      margin-top: 30px;
    }

    .comment-list hr {
      border: 1px solid #ffe2e5;
    }

    textarea, input {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
      border-radius: 8px;
      border: 1px solid #ddd;
    }

    button {
      margin-top: 10px;
      padding: 8px 20px;
      background-color: #ffa4a7;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    button:hover {
      background-color: #ff8f92;
    }
  </style>
</head>
<body>

<header>
  <h1>TechTalks ðŸ’¬</h1>
  <nav>
    <% if (currentUser) { %>
      <a href="/vlog/new">Write Vlog</a>
      <a href="/auth/logout">Logout</a>
    <% } else { %>
      <a href="/auth/login">Login</a>
      <a href="/auth/register">Register</a>
    <% } %>
  </nav>
</header>

<div class="container">
  <h2 class="vlog-title"><%= vlog.title %></h2>
  <p><%= vlog.content %></p>
  <p class="author"><i>By <%= vlog.author %> on <%= vlog.createdAt.toDateString() %></i></p>

  <hr>

  <div class="comment-list">
    <h3>Comments ðŸ’¬</h3>
    <% if (comments.length === 0) { %>
      <p>No comments yet. Be the first!</p>
    <% } %>
    <% comments.forEach(c => { %>
      <div>
        <strong><%= c.username %>:</strong> <%= c.message %><br>
        <small><%= c.createdAt.toLocaleString() %></small>
        <hr>
      </div>
    <% }) %>
  </div>

  <% if (currentUser) { %>
    <div class="comment-box">
      <form action="/vlog/<%= vlog._id %>/comment" method="POST">
        <textarea name="message" placeholder="Write your comment..." rows="3" required></textarea>
        <button type="submit">Post Comment</button>
      </form>
    </div>
  <% } else { %>
    <p><a href="/auth/login">Login</a> to post a comment.</p>
  <% } %>
</div>

</body>
</html>
